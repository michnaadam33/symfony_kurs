{% extends 'base.html.twig' %}
{% block body %}
    <h1>Osoby </h1>
    <a href="{{ path('app_category_create') }}">Dodaj nową kategorię</a>
    <table>
        <tr>
            <td><h3>ID</h3></td>
            <td><h3>Nazwa</h3></td>
        </tr>
        {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
        </tr>
            {% else %}
                <tr>
            Brak kategorii
                </tr>
        {% endfor %}
    </table>
{% endblock %}